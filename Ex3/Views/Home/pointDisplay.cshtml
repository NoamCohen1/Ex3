
@{
    ViewBag.Title = "pointDisplay";
}


<body background="~/export-map-share.png" style="background-size:100% 100%; background-attachment:fixed">
</body>

<canvas id="myCanvas"
        style="border:1px;"></canvas>
<script>
    var lon = @ViewBag.lon;
    var lat = @ViewBag.lat;
    var canvas = document.getElementById("myCanvas");
    //var ctx = canvas.getContext("2d");
    //ctx.strokeStyle = "pink";
    //ctx.beginPath();
    //ctx.arc(95, 50, 40, 0, 2 * Math.PI);
    //ctx.stroke();

    canvas.height = window.innerHeight;
    canvas.width = window.innerWidth;
    function setLon(lon) {
        return (lon + 180) * (canvas.width / 360);
    }

    function setLat(lat) {
        return (lat + 90) * (canvas.height / 180);
    }

    function drawLocation(lon, lat) {
        var ctx = canvas.getContext("2d");
        ctx.beginPath();
        ctx.fillStyle = "red";
        ctx.arc(lon, lat, 5, 0, 2 * Math.PI);
        ctx.stroke();
        ctx.fill();
    }
    lon = setLon(lon);
    lat = setLat(lat);
    drawLocation(lon, lat);
</script>

